@model IEnumerable<WebApplication39.Models.Musteri>
@using X.PagedList
@using X.PagedList.Mvc.Core
@*@model List<WebApplication39.Models.Musteri>*@


@{
    ViewData["Title"] = "Index";
}

<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

<h3 style="margin-left:300px">MÜŞTERİLER SAYFASI</h3>
<br />
<br />
@using (Html.BeginForm())
{
    <p>
        Müşteri Adı: @Html.TextBox("p")
        <input type="submit" value="Find" />
    </p>
}
<table class="table table-striped">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ucret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ucret)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


<a class="btn btn-info" href="/Musteri/Create/" role="button">MÜŞTERİ EKLE</a>