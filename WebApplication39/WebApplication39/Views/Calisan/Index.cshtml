@model IEnumerable<WebApplication39.Models.Calisan>

@{
    ViewData["Title"] = "Index";
}


<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

<h3 style="margin-left:300px">ÇALIŞANLAR SAYFASI</h3>
<br />
<br />
<table class="table table-striped">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sifre)
            </th>
            <th>Image</th>
            <th>
                @Html.DisplayNameFor(model => model.MaasId)
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                @*<td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sifre)
                </td>
                <td>
                    @if (String.IsNullOrEmpty(item.Image))
                    {
                        <img src="~/noimage.png" height="50" width="50" />
                    }
                    else
                    {

                        <img src="data:image/png;base64,@item.Image" width="50" height="50" />
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Maas.Bakiye)
                </td>


                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>

            </tr>
        }

    </tbody>
</table>
<a class="btn btn-info" href="/Calisan/Create/" role="button">ÇALIŞAN EKLE</a>

