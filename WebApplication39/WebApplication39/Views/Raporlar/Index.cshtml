@model IEnumerable<WebApplication39.Models.Raporlar>

@{
    ViewData["Title"] = "Index";
}


<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

<h3 style="margin-left:300px">RAPORLAR SAYFASI</h3>


<br />
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusteriYorum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Neden)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MusteriYorum)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-info" href="/Raporlar/Create/" role="button">RAPOR EKLE</a>